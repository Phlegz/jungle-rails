<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <% if current_user %>
      Signed in as <%= current_user.email %> | <%= link_to "Logout", '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Register', '/register' %>
    <% end %>
    
    <div class="flash-notice">
     <% flash.each do |key, value| %>
       <%= value %>
     <% end %>
    </div>

    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
